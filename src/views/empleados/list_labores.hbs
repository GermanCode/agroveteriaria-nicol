<div class="index container p-4">
    <h1 class="text-center">Listado de Labores</h1>
    <div class="row">
        {{#each responsable}}
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <a href="/empleado_id" target="_blank">
                        <h5 class="card-title text-uppercase">
                            {{Estado}}
                        </h5>
                    </a>
                    <p class= "m-2">{{ desc_Labor }}</p>
                    <p class="m-2">{{nombres}}</p>
                    <a href="/links/delete/{{id_links}}" class="btn btn-danger">Completar</a>
                    <a href="/links/edit/{{id_links}}" class="btn btn-secondary">Posponer</a>
                </div>
            </div>
        </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay Link's guardados a√∫n... -- There are not links saved yet...</p>
                    <a href="/links/add">Create One!</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>